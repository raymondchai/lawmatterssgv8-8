# Singapore .com.sg Production Environment Variables
# Copy this file to .env.production and fill in your values

# Application Configuration (Singapore Domain)
VITE_APP_NAME=LawMattersSG
VITE_APP_URL=https://lawmatterssg.com.sg
VITE_API_URL=https://lawmatterssg.com.sg/api
VITE_ENVIRONMENT=production

# Supabase Configuration (Production Project)
VITE_SUPABASE_URL=https://your-prod-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-production-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-production-service-key

# OpenAI Configuration
OPENAI_API_KEY=sk-your-production-openai-api-key
OPENAI_MODEL=gpt-4-turbo
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.1

# Stripe Configuration (Live Keys for Singapore)
VITE_STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Email Service Configuration (Singapore Domain)
SENDGRID_API_KEY=SG.your-production-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@lawmatterssg.com.sg

# Alternative Email Service
RESEND_API_KEY=re_your-production-resend-api-key
RESEND_FROM_EMAIL=noreply@lawmatterssg.com.sg

# Analytics & Monitoring
VITE_POSTHOG_KEY=phc_your-production-posthog-key
VITE_POSTHOG_HOST=https://app.posthog.com
SENTRY_DSN=https://your-production-sentry-dsn@sentry.io/project-id

# File Upload Configuration
VITE_MAX_FILE_SIZE_MB=10
VITE_MAX_FILE_SIZE_PREMIUM_MB=50
VITE_ALLOWED_FILE_TYPES=pdf,doc,docx,txt

# Rate Limiting (Singapore Production Values)
VITE_RATE_LIMIT_REQUESTS_PER_MINUTE=100
VITE_RATE_LIMIT_REQUESTS_PER_HOUR=2000

# Feature Flags (Production)
VITE_ENABLE_AI_CHAT=true
VITE_ENABLE_DOCUMENT_ANALYSIS=true
VITE_ENABLE_TEMPLATE_GENERATION=true
VITE_ENABLE_LAW_FIRM_DIRECTORY=true

# Security Configuration
VITE_ENABLE_2FA=true
VITE_SESSION_TIMEOUT=3600
VITE_MAX_LOGIN_ATTEMPTS=5

# Performance Configuration
VITE_ENABLE_LAZY_LOADING=true
VITE_ENABLE_SERVICE_WORKER=true
VITE_ENABLE_OFFLINE_MODE=true

# Debug Configuration (Production)
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=error

# Singapore-Specific Configuration
VITE_TIMEZONE=Asia/Singapore
VITE_CURRENCY=SGD
VITE_LOCALE=en-SG
